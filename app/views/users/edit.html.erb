<h1>User info</h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Image %><br>
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="field">
    <%= f.label :Introduction %>
    <%= f.text_area :introduction %>
  </div>
  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>
