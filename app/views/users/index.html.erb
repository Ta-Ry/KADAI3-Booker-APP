<%= render 'books/link', book: Book.new, user: @user %>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><a><%= link_to 'Show', user %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>