<div class="container">
  <div class="row">
<% if @book.errors.any? %>
  <div id="error-explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
  </div>
<% end %>
      <div class="col-xs-3">
<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Update Book" %>
  </div>
<% end %>
<% if @book.user.id == current_user.id %>
<%= link_to "Show", book_path(@book) %>
<span>|</span>
<%= link_to "Back", books_path %>
<% end %>
</div>
</div>
</div>