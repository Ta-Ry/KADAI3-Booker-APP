<div class="container">
  <div class="row">
<% if @book.errors.any? %>
  <div id="error-explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
  </div>
<% end %>
<%= render 'books/link', book: Book.new, user: @user %>
    <div class="col-xs-9">
<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
           <%= link_to book_path(book.id) do %>
           <%= book.title %>
           <% end %>
        </td>
        <td><%= book.body %></td>
        <td>
          <% if book.favorited_by?(current_user) %>
          <div>
           <%= link_to book_favorites_path(book), method: :delete do %>
           <i class="glyphicon glyphicon-heart" style="color: red;"></i>
           <%= book.favorites.count %>
           <% end %>
         </div>
         <% else %>
         <div>
           <%= link_to book_favorites_path(book), method: :post do %>
           <i class="glyphicon glyphicon-heart-empty"></i>
           <%= book.favorites.count %>
           <% end %>
         </div>
         <% end %>
       </td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>