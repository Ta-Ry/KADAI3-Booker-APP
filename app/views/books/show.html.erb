<% if flash[:notice] %>
<div>
    <p class="flash"><%= flash[:notice] %></p>
</div>
<% end %>
<%= render 'books/link', book: Book.new, user: @user %>
<h2>Book detail</h2>
<div class="blog-box-content">
<table>
  <thead>
    <tr></tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><br>
          <%= @book.user.name %>
          <% end %>
        </td>
        <td>
           <p class="title">
             <%= link_to book_path(@book) do %>
               <%= @book.title %>
             <% end %>
           </p>
        </td>
        <td>
          <p class="opinion">
            <%= @book.body %>
          </p>
        </td>
        <% if @book.user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' } %></td>
        <% end %>
      </tr>
  </tbody>
</table>
</div>


