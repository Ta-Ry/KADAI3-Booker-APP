<div class="container">
  <div class="row">

    <% if flash[:notice] %>
    <div>
      <p class="flash"><%= flash[:notice] %></p>
    </div>
    <% end %>

    <%= render 'books/link', book: Book.new, user: @user %>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <div class="blog-box-content">
        <table class="table">
          <thead>
            <tr></tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
                <br>
                <%= @user.name %>

                <% end %>
              </td>
              <td>
               <p class="title">
                 <%= link_to book_path(@book) do %>
                 <%= @book.title %>
                 <% end %>
               </p>
             </td>
             <td>
              <p class="opinion">
                <%= @book.body %>
              </p>
              <td>
                <% if @book.favorited_by?(current_user) %>
                <div>
                 <%= link_to book_favorites_path(@book), method: :delete do %>
                 <i class="glyphicon glyphicon-heart" style="color: red;"></i>
                 <%= @book.favorites.count %>
                 <% end %>
               </div>
               <% else %>
               <div>
                 <%= link_to book_favorites_path(@book), method: :post do %>
                 <i class="glyphicon glyphicon-heart-empty"></i>
                 <%= @book.favorites.count %>
                 <% end %>
               </div>
               <% end %>
              </td>
              </td>
              <td>
              <div>
                <a>コメント数: <%= @book.post_comments.count %></a>
              </div>
              </td>
              <% if @book.user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@book), method: :delete, class:"btn btn-danger", data: { confirm: '本当に消しますか？' } %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <ol>
          <% @book.post_comments.each do |post_comment| %>
          <table class="table">
            <thead>
              <tr>
                <td></td>
                <td>Name</td>
                <td>Comment</td>
                <td></td>
              </tr>
            </thead>

            <tbody class="comment-body bb">
              <tr>
              <td class="comment-avatar">
                    <div class="avatar">
                      <%= attachment_image_tag post_comment.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                    </div>
                    <% if post_comment.user_id == current_user.id %>
                    <div><%= link_to "コメント削除", book_post_comments_path(@book), method: :delete, class:"btn btn-danger", data: { confirm: '本当に消しますか？' } %></div>
                    <% end %>
              </td>
              <td class="comment-text">
                <div class="comment-author clearfix">
                  <a class="link-author"><%= post_comment.user.name %></a>
                </div>
                <td class="comment-entry"><%= post_comment.comment %></td>
              </td>
             </tr>
            </tbody>
          </table>
          <% end %>
        </ol>
        <%= form_for [@book, @post_comment] do |f| %>
        <div class="row">
          <div class="col-sm-12">
            <%= f.text_area :comment, class: "form-control" %>
          </div>
        </div>
        <div>
        <%= f.submit "送信する", class: "btn btn-default pull-right" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


