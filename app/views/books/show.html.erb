<% if flash[:notice] %>
<div>
    <p class="flash"><%= flash[:notice] %></p>
</div>
<% end %>
<h2>Book detail</h2>
<div class="blog-box-content">
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td>
           <p class="title">
            <strong>Title</strong>
             <%= link_to book_path(@book) do %>
               <%= @book.title %>
             <% end %>
           </p>
        </td>
        <td>
          <p class="opinion">
            <strong>Opinion</strong>
            <%= @book.body %>
          </p>
        </td>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' } %></td>
      </tr>
</div>


