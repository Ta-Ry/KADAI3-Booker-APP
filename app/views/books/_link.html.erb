<div class="col-xs-3">


<h2>User info</h2>
<div class="profile-container">

	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
      	<th><p>name</p></th>
        <th><p><%= user.name %></p></th>
      </tr>
      <tr>
        <th><p>introduction</p></th>
        <th><p><%= user.introduction %></p></th>
      </tr>
  </table>
  <div class="row">
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user) do %>
      <span class="glyphicon glyphicon-wrench col-xs-12 btn btn-default"></span>
      <% end %>
  <% else %>
    <p><%= link_to user_path(current_user) do %>
      <span class="glyphicon glyphicon-wrench col-xs-12 btn btn-default"></span>
      <% end %>
    </p>
  <% end %>
  </div>
</div>

<h2>New book</h2>

<%= form_for(book) do |f| %>
<% if book.errors.any? %>
  <div id="error-explanation">
    <h2><%= book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
  </div>
<% end %>

<div class="field row">
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title, class: "book_Title col-xs-12" %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body, class: "book_Opinion col-xs-12" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book", :class=>"col-xs-12 btn btn-primary"%>
  </div>
</div>
<% end %>
</div>