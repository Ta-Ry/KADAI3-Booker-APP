<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header" id="header" style="color: white;">
      <nav class="navbar-shadow" role="navigation" id="slide-nav" style="background-color: #222; border-color: #090909;S">
        <div class="container" style="padding-right: 15px; padding-left: 15px; margin-right: auto; margin-left: auto;">
          <div class="navbar-header" style="font-size: 20px;">
            <span class="navbar-logo" href="/">Bookers</span>
          </div>
          <div class="nav navbar-nav navbar-right">
             <% if user_signed_in? %>
                <li class="" style="padding-top: 15px; padding-bottom: 15px;">
                  <%= link_to "Home", user_path(current_user.id) %>
                </li>
                <li class="">
                  <%= link_to 'Users', users_path %>
                </li>
                <li class="">
                  <%= link_to 'Books', books_path %>
                </li>
                <li class="">
                  <%= link_to "logout", destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to "Home", '/' %>
                </li>
                <li class="">
                  <%= link_to "About", '/home/about' %>
                </li>
                <li class="">
                  <%= link_to "Sign up", '/users/sign_up' %>
                </li>
                <li class="">
                  <%= link_to "login", '/users/sign_in' %>
                </li>
              <% end %>
          </div>
        </div>
      </nav>
    </div>

    <%= yield %>

   <footer class="footer style-2">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
          </div>
          <div class="col-md-2">
            <div class="col">
              <p>CopyRight Inflatop.Inc</p>
            </div>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>

